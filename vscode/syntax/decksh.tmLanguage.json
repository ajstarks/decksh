{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "decksh",
	"patterns": [
		{
			"name": "comment.line.double-slash.decksh",
			"match": "\\s*//.*"
		},
		{
			"name": "keyword.other.command.decksh",
			"match": "(?:deck|edeck|canvas|def|edef|format|include|import|grid|func|call|callfunc|vmap|slide|eslide|textbox|textblock|textfile|textcode|arctext|btext|text|ctext|etext|rtext|random|lbrace|rbrace|ubrace|dbrace|lbracket|rbracket|ubracket|dbracket|line|blist|list|nlist|clist|li|elist|data|edata|dchart|for|efor|legend|image|cimage|polyline|polygon|pill|rect|roundrect|rrect|square|ellipse|star|circle|acircle|curve|arc|arrow|lcarrow|dcarrow|rcarrow|ucarrow|hline|vline|area|polar|polarx|polary|sqrt)"
		},
		
		{
			"name": "entity.name.variable.decksh",
			"match": "(?<=\\s)\\w+:(?=\\()"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"strings": {
			"name": "string.quoted.double.decksh",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.decksh",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.decksh"
}
