#!/bin/sh
sans="GillSans"
serif="GillSans-Italic"
mono="NotoMono-Regular"
mono2="Inconsolata-Medium"
serif2="Charter-Italic"

case "$1" in 

	ref)
		shift
		decksh objref.dsh | pdfdeck -author "Anthony Starks" -title "decksh object reference" -pagesize 900,600 -sans $sans -mono $mono2 -serif $serif2 -stdout $* - > objref.pdf
		;;
	over)
		shift
		decksh decksh.dsh | pdfdeck -author "Anthony Starks" -title "decksh overview"         -pagesize 900,600 -sans $sans -mono $mono2  -serif $serif2 -stdout $* - > decksh.pdf
		;;

	ins*)
		shift
		decksh install-run.dsh | pdfdeck -author "Anthony Starks" -title "decksh/pdfdeck install guide" -pagesize 900,600 -sans $sans -mono $mono2 -serif $serif2 -stdout $* - > install-run.pdf
		;;
	*)
		if test $# -ge 1
		then
			shift
		fi
		decksh decksh.dsh      | pdfdeck -author "Anthony Starks" -title "decksh overview"              -pagesize 900,600 -sans $sans -mono $mono2  -serif $serif2 -stdout $* - > decksh.pdf
		decksh objref.dsh      | pdfdeck -author "Anthony Starks" -title "decksh object reference"      -pagesize 900,600 -sans $sans -mono $mono2  -serif $serif2 -stdout $* - > objref.pdf
		decksh install-run.dsh | pdfdeck -author "Anthony Starks" -title "decksh/pdfdeck install guide" -pagesize 900,600 -sans $sans -mono $mono2  -serif $serif2 -stdout $* - > install-run.pdf
		;;
esac

