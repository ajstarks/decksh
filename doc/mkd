#!/bin/sh
case $1 in
        gill)
                sans="GillSans"
                mono="Go-Mono"
                serif="timesi"
                ;;
        plex)
                sans="IBMPlexSans-Regular"
                mono="IBMPlexMono-Regular"
                serif="IBMPlexSerif-Regular"
                ;;
        noto)
                sans="NotoSans-Regular"
                mono="NotoMono-Regular"
                serif="NotoSerif-Regular"
                ;;
        fira)
                sans="FiraSans-Regular"
                mono="FiraMono-Regular"
                serif="CharterItalicBT"
                ;;
        lib)
                sans="LiberationSans-Regular"
                mono="LiberationMono-Regular"
                serif="LiberationSerif-Regular"
                ;;
        lm)
                sans="lmsans10-regular"
                mono="lmmono10-regular"
                serif="lmroman10-regular"
                ;;
        inter)
                sans="Inter-UI-Medium"
                serif="Inter-UI-Italic"
                mono="Go-Mono"
                ;;
        *)
                sans="GillSans"
                mono="Go-Mono"
                serif="timesi"
                ;;
esac
shift
decksh decksh.dsh | pdfdeck $* -pagesize 800,450 -sans "$sans" -mono "$mono" -serif "$serif" -stdout - > decksh.pdf
